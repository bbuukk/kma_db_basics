                    <font>
                        <Font name="Lucida Sans Italic" size="15.0" />
                    </font>
                </TextField>
                <TextField fx:id="amountOfPagesField" alignment="TOP_LEFT" layoutX="30.0" layoutY="192.0" prefHeight="31.0" prefWidth="150.0" promptText="Amount of pages">
